<div class="flex flex-col">
  <div class="-m-1.5 overflow-x-auto">
    <div class="p-1.5 min-w-full inline-block align-middle">
      <div class="overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead>
            <tr>
              <th
                scope="col"
                class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase"
              >Username</th>
              <th
                scope="col"
                class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase"
              >Name</th>
              <th
                scope="col"
                class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase"
              >YOB</th>
              <th
                scope="col"
                class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase"
              >Admin</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            {{#each users}}
              <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                <td
                  class="px-6 py-4 whitespace-nowrap align-top text-sm font-medium text-gray-800 dark:text-gray-200"
                >{{this.username}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap align-top text-sm font-medium text-gray-800 dark:text-gray-200"
                >{{this.name}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap align-top text-sm font-medium text-gray-800 dark:text-gray-200"
                >{{this.YOB}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap align-top text-sm font-medium text-gray-800 dark:text-gray-200"
                >{{this.isAdmin}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
  const remove = (id, name) => {let e = confirm("Are you sure you want to " +
  "delete " + name); if(e){ location.href = `/nations/api/delete/${id}` } }
</script>