<div class="flex flex-col">
  <div class="-m-1.5 overflow-x-auto">
    <div class="p-1.5 min-w-full inline-block align-middle">
      <div class="flex w-full">
        <a
          href="players/add"
          type="button"
          class="text-white cursor-pointer ml-auto mb-4 bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-md text-sm px-5 py-2.5 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800"
        >New</a>
      </div>
      <div class="overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
          <thead>
            <tr>
              <th
                scope="col"
                class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase"
              >Image</th>
              <th
                scope="col"
                class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase"
              >Name</th>
              <th
                scope="col"
                class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase"
              >Club</th>
              <th
                scope="col"
                class="px-6 py-4 text-left text-xs font-medium text-gray-500 uppercase"
              >Position</th>
              <th
                scope="col"
                class="px-6 py-4 text-center text-xs font-medium text-gray-500 uppercase"
              >Goals</th>
              <th
                scope="col"
                class="px-6 py-4 text-center text-xs font-medium text-gray-500 uppercase"
              >Captain</th>
              <th
                scope="col"
                class="px-6 py-4 text-center text-xs font-medium text-gray-500 uppercase"
              >Update</th>
              <th
                scope="col"
                class="px-6 py-4 text-right text-xs font-medium text-gray-500 uppercase"
              >Delete</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            {{#each players}}
              <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 dark:text-gray-200"
                ><img
                    class="w-10 h-10 rounded"
                    src={{this.image}}
                    alt="Default avatar"
                  /></td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-800 dark:text-gray-200"
                >{{this.name}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200"
                >{{this.club}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200"
                >{{this.position}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200 text-center"
                >{{this.goals}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-sm text-gray-800 dark:text-gray-200 text-center"
                >{{#if this.isCaptain}}
                    <span>Yes</span>
                  {{else}}
                    <span>No</span>
                  {{/if}}</td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium"
                >
                  <a
                    class="text-blue-500 hover:text-blue-700"
                    href="/players/update/{{this._id}}"
                  >Update</a>
                </td>
                <td
                  class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium"
                >
                  <a
                    class="text-red-500 hover:text-red-700 cursor-pointer"
                    onclick="remove('{{this._id}}')"
                  >Delete</a>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
<script>
  const remove = (id) => { let e = confirm("Are you sure you want to delete");
  if(e){ location.href = `/players/api/delete/${id}` } }
</script>